pipeline {
    agent any

    tools {
      maven 'Maven 3.9.9'
    }

   stages {
        stage('Hello') {
            steps {
                echo 'Hello, You are welcome!!'
            }
        }

        stage('Maven version') {
            steps {
                sh 'mvn --version'

            }
        }

        stage('Clean and Validate') {
            steps {
                script {
                    sh 'mvn clean'
                }

                script {
                     sh 'mvn validate'
                }
            }
        }

        stage('Compile and Test') {
            steps {
                script {
                    sh 'mvn compile'
                    sh 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                script {
                    sh 'mvn package'
                }
            }
        }
   }

   post {
       success{
           script {
              echo "Pipeline execution was successful"
              echo "${env.JOB_NAME}"
              echo "${env.BUILD_URL}"

           }
       }
       failure {
            script {
               echo 'Pipeline execution failed'
               echo "${env.JOB_NAME}"
               echo "${env.BUILD_URL}"
            }
       }

   }

}
