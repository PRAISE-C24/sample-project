pipeline {
    agent any

    tools {
      maven 'Maven 3.9.9'
    }

   stages {
        stage('Hello') {
            steps {
                echo 'Hello, You are welcome!!'
            }
        }

        stage('Maven version') {
            steps {
                sh 'mvn --version'

            }
        }

        stage('Clean') {
            steps {
                script {
                    sh 'mvn clean'
                }
            }
        }

        stage('Validate') {
            steps {
                script {
                    sh 'mvn validate'
                }
            }
        }

        stage('Compile') {
            steps {
                script {
                    sh 'mvn compile'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                script {
                    sh 'mvn package'
                }
            }
        }
   }

   post {
        always {
            script {
                echo 'Pipeline execution completed.'
            }
        }
   }
}
